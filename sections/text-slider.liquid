{% render 'text-slider-bg' %}

<h3 class="h5">{{ section.settings.title }}</h3>
<div class="js-text-slider swiper">
    <div class="swiper-wrapper">
        {% for block in section.blocks %}
            <div class="swiper-slide">
                <span class="h2">{{ block.settings.title }}</span>
            </div>
        {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
</div>


  
{% schema %}
    {
    "name": "Text Slider",
    "tag": "section",
    "class": "text-slider-container",
    "settings": [
        {
        "type": "inline_richtext",
        "id": "title",
        "label": "Subheadline", 
        "default": "Attention <em>With</em> Intention"
        }
    ],
    "blocks": [
        {
            "type": "Headline",
            "name": "Headline",
            "settings": [
              {
                "type": "inline_richtext",
                "id": "title",
                "label": "Headline"
              }
            ]
        }
    ],
    "presets": [
        {
        "name": "Text Slider"
        }
    ]
    }
{% endschema %}