<div class="image-container image-container--one">
    <div class="image js-image image--one">
        {{ section.settings.image_one | image_url: width: 1200 | image_tag }}
    </div>

    <div class="image js-image image--two">
        {{ section.settings.image_two | image_url: width: 1200 | image_tag }}
    </div>
</div>


<div class="text-slider js-text-slider swiper">
    <div class="swiper-wrapper">
        {% for block in section.blocks %}
            <div class="swiper-slide">
                <span class="h2">{{ block.settings.title }}</span>
            </div>
        {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
</div>

<div class="centered-cta">
    <a class="big-btn js-circle-btn" href="{{ section.settings.cta_url }}">
        {% render 'circle-btn' %}
        <span>{{ section.settings.cta_label }}</span>
    </a>
</div>

<div class="image-container image-container--two">
    <div class="image js-image image--three">
        {{ section.settings.image_three | image_url: width: 1200 | image_tag }}
    </div>
    <div class="image js-image image--four">
        {{ section.settings.image_four | image_url: width: 1200 | image_tag }}
    </div>
    <h3 class="h2">{{ section.settings.headline | remove: '<p>' | remove: '</p>' }}</h3>
    {{ section.settings.copy }}

    <div class="wellbeing-graphic js-wellbeing-graphic-two">
        {% render 'get-back-to-you' %} 
    </div> 

</div>

{% render 'moments-trigger' %}


{% schema %}
{
  "name": "Wellbeing Gallery",
  "tag": "div",
  "class": "wellbeing-gallery js-wellbeing-gallery wrapper",
  "settings": [
    {
      "type": "richtext",
      "id": "headline",
      "label": "Headline",
      "default": "<p>It’s the space in which you lose yourself and find yourself all at once — and it’s unique to each of us.</p>"
    },
    {
        "type": "richtext",
        "id": "copy",
        "label": "Copy",
        "default": "<p>That’s what we’re here to help cultivate, to connect to, to celebrate, and return to… at any given moment, everywhere you go.</p>"
    },
    {
        "type": "image_picker",
        "id": "image_one",
        "label": "Image #1 (Med Rect)"
    },
    {
        "type": "image_picker",
        "id": "image_two",
        "label": "Image #1 (Small Rect)"
    },
    {
        "type": "image_picker",
        "id": "image_three",
        "label": "Image #3 (Circle)"
    },
    {
        "type": "image_picker",
        "id": "image_four",
        "label": "Image #4 (Large Rect)"
    },
    {
        "type": "url",
        "id": "cta_url",
        "label": "CTA URL"
    },
    {
        "type": "text",
        "id": "cta_label",
        "label": "CTA Label"
    }
  ],
  "blocks": [
    {
      "name": "Headline",
      "type": "headline",
      "settings": [
        {
            "type": "inline_richtext",
            "id": "title",
            "label": "Centered Headline",
            "default": "An awakening of the senses."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Wellbeing Gallery"
    }
  ]
}
{% endschema %}
