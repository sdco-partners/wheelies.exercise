<div class="content">
    <div class="content__bg">{% render 'bg-dots' %}</div>
    <div class="content__inner">
    {% for block in section.blocks %}
      {% if block.type == 'subheadline' %}
        <p class="h5">{{ block.settings.title }}</p>
      {% elsif block.type == 'headline' %}
        <h1 class="h1">{{ block.settings.title | remove: '<p>' | remove: '</p>' }}</h1>
      {% endif %}
    {% endfor %}
    </div>
    <div class="content__scroll-indicator">
        {% render 'scroll-indicator' %}
    </div>
</div>

<div class="image">
  {%- if section.settings.image != blank -%}
    {{ section.settings.image | image_url: width: 1920 | image_tag }}
  {%- endif -%}
</div>


{% schema %}
  {
    "name": "Article Hero",
    "tag": "section",
    "class": "article-hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "subheadline",
        "name": "Subheadline",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "default": "Press",
            "label": "Article Category"
          }
        ]
      }, {
        "type": "headline",
        "name": "Headline",
        "settings": [
          {
            "type": "richtext",
            "id": "title",
            "default": "<h1>Post title, voluptem acum doloremque totam <em>rem</em> aperiam</h1>",
            "label": "Article Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Article Hero",
        "blocks": [
          {
            "type": "subheadline"
          }, {
            "type": "headline"
          }
        ]
      }
    ]
  }
{% endschema %}