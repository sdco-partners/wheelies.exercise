<div class="hero__content">
  {%- if section.blocks -%}
    {% for block in section.blocks %}
      <img src="{{ block.settings.slide | img_url: "medium"}}">
    {% endfor %}
  {%- endif -%}
</div>

{% schema %}
  {
    "name": "Hero",
    "tag": "section",
    "class": "hero js-hero",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "title",
        "label": "Tagline",
        "default": "Tastiest, Tiniest"
      }, {
        "type": "text",
        "id": "animation",
        "label": "Slideshow Animation",
        "placeholder": "You can leave this blank :)"
      }
    ],
    "blocks": [
      {
        "name": "Slide",
        "type": "slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "slide",
            "label": "Slide"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Animation"
      }
    ]
  }
{% endschema %}