{% if section.blocks %}
  {% for block in section.blocks %}

    {% if block.type == "Header" %}
      <h2 class="contact-info__title">
        {{ block.settings.title }}
      </h2>

    {% elsif block.type == "About" %}
      <p class="contact-info__subheadline">
        {{ block.settings.title }}
      </p>

    {% elsif block.type == "Graphic" %}
      <img class="contact-info__graphic" src="{{ block.settings.title | img_url: "small"}}">

    {% elsif block.type == "Copy" %}
      <p class="contact-info__copy">
        {{ block.settings.title }}
      </p>

    {% endif %}
  {% endfor %}
{% endif %}

{% schema %}
  {
    "name": "Contact Info",
    "tag": "section",
    "class": "contact-info wrapper",
    "blocks": [
      {
        "name": "Header",
        "type": "Header",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "title",
            "label": "Contact Header"
          }
        ]
      }, {
        "name": "About",
        "type": "Subheadline",
        "settings": [
          {
            "type": "richtext",
            "id": "title",
            "label": "Contact Subheadline"
          }
        ]
      }, {
        "name": "Illustration",
        "type": "Graphic",
        "settings": [
          {
            "type": "image_picker",
            "id": "title",
            "label": "Wheelies Illustration",
            "info": "Upload one of the donut people illustrations included in your branding files! For best results, use a PNG with a transparent background."
          }
        ]
      }, {
        "name": "Contact Info",
        "type": "Copy",
        "settings": [
          {
            "type": "richtext",
            "id": "title",
            "label": "Contact Info"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Contact",
        "name": "Contact"
      }
    ]
  }
{% endschema %}