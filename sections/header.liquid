<div class="header-wrapper js-header">
  <div class="header">

    {%- if section.settings.instagram-url -%}
      <a class="header__icon" href="{{ section.settings.instagram-url }}">
        {%- render "icon-instagram" -%}
      </a>
    {%- endif -%}

    {%- if section.settings.cta_label -%}
      <p class="header__cta">{{ section.settings.cta_label }}</p>
    {%- endif -%}

  </div>
</div>

{% schema %}
  {
    "name": "t:sections.header.name",
    "tag": "header",
    "class": "header-container js-header",
    "settings": [
      {
        "type": "text",
        "id": "cta_label",
        "label": "CTA Label"
      }, {
        "type": "url",
        "id": "instagram-url",
        "label": "Instagram URL"
      }
    ]
  }
{% endschema %}